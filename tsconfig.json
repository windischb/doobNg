{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@doob-ng/core": [
        "dist/doob-ng/core/doob-ng-core",
        "dist/doob-ng/core"
      ],
      "@local/core": [
        "projects/doob-ng/core/doob-ng-core",
        "projects/doob-ng/core"
      ],
      "@doob-ng/ui": [
        "dist/doob-ng/ui/doob-ng-ui",
        "dist/doob-ng/ui"
      ],
      "@local/ui": [
        "projects/doob-ng/ui/doob-ng-ui",
        "projects/doob-ng/ui"
      ],
      "@doob-ng/editor": [
        "dist/doob-ng/editor/doob-ng-editor",
        "dist/doob-ng/editor"
      ],
      "@local/editor": [
        "projects/doob-ng/editor/doob-ng-editor",
        "projects/doob-ng/editor"
      ],
      "@doob-ng/prism": [
        "dist/doob-ng/prism/doob-ng-prism",
        "dist/doob-ng/prism"
      ],
      "@local/prism": [
        "projects/doob-ng/prism/doob-ng-prism",
        "projects/doob-ng/prism"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
